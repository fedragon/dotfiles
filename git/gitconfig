[credential]
  helper = cache --timeout=3600
[alias]
  a = add
  aa = add -A
  ap = add -p
  b = branch
  bd = branch -d
  bD = branch -D
  c = commit -v
  cam = commit -a --amend -v
  co = checkout
  cob = checkout -b
  cot = checkout -t
  d = diff
  dc = diff --cached
  s = status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pr = pull --rebase
  pu = push -u
[push]
	default = simple
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "diff"]
  meta = yellow
  frag = magenta
  old  = white red
  new  = white green
[color "interactive"]
	prompt = black yellow
	header = magenta
	help = normal
	error = normal
[core]
  editor = /usr/bin/vim
	excludesfile = ~/.gitignore

