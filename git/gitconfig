[alias]
  a = add
  aa = add -A
  ap = add -p
  b = branch
  bd = branch -d
  bD = branch -D
  c = commit -v
  cam = commit -a --amend -v
  cm = commit --amend -v
  co = checkout
  cob = checkout -b
  cot = checkout -t
  d = diff
  dc = diff --cached
  s = status
  lf = log --follow -p
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pr = pull --rebase
  pu = push -u
[push]
	default = simple
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[color "interactive"]
	prompt = yellow black
	header = magenta
	help = normal
	error = red black
[core]
  editor = emacsclient -t
	excludesfile = ~/.gitignore

